@model IEnumerable<ProjectTracker.Models.Subject>

@{
    ViewBag.Title = "Subjects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Subjects</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SubjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueDates)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rubric)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SubjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DueDates)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rubric)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.SubjectId }) |
            @Html.ActionLink("Details", "Details", new { id = item.SubjectId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.SubjectId })
        </td>
    </tr>
}

</table>
